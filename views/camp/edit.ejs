<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">Edit Camp</h1>
    <div class="col-6 offset-3">
        <form action="/camp/<%= camp._id %>?_method=PUT" method="post" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="container">
                <div class="mb-2">
                    <label class="form-label" for="name">name</label>
                    <input class="form-control" type="text" id="name" value="<%= camp.name  %>" name="name" required>
                </div>
                <div class="mb-2">
                    <label class="form-label " for="price">price url</label>
                    <input class="form-control " type="text" id="price" value="<%= camp.price %>" name="price" required>
                </div>
                <div class="mb-2">
                    <label class="form-label" for="location">location</label>
                    <input class="form-control" type="text" id="location" value="<%= camp.location %>" name="location" required>
                </div>
                <div class="mb-2">
                    <label class="form-label " for="image">Add Images</label>
                    <input class="form-control " type="file" id="image"  name="img" multiple>
                </div>
                <div class="mb-2">
                    <% camp.img.forEach( (img,i) => { %>
                        <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                        <div class="form">
                            <input type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%= img.filename %>">
                            <label  for="image-<%= i %>">delete</label>
                        </div>
                        
                    <% }) %>
                </div>
            </div>
            <button class="btn btn-success">submit</button>
        </form>
    </div>
</div>

