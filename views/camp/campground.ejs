<% layout('layouts/boilerplate') %>
    <h3> campgrounds </h3>
    
<% for(let campground of camp){ %>
<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
            <img src="<%= campground.img[0].url %>" class="img-fluid">
        </div>
        <div class="col-mg-8">
            <div class="card-body ">
                <h5 class="card-title">
                    <%= campground.name %>
                </h5>
                <a href="/camp/<%=campground._id %>" class="btn btn-primary">view</a>
            </div>
        </div>
        
    </div>
</div>
<% } %>
    
